<p style="color: green"><%= notice %></p>
<h1>All Sellers</h1>

<%= link_to 'New Seller', new_seller_path, class: 'btn btn-primary' %>

<% if @sellers.any? %>
  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Country</th>
        <th>City</th>
        <th>District</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @sellers.each do |seller| %>
        <tr>
          <td><%= seller.first_name %></td>
          <td><%= seller.last_name %></td>
          <td><%= seller.country %></td>
          <td><%= seller.city %></td>
          <td><%= seller.district %></td>
          <td>
            <%= link_to 'Show', seller_path(seller), class: 'btn btn-info' %> |
            <%= link_to 'Edit', edit_seller_path(seller), class: 'btn btn-warning' %> |
            <%= link_to 'Delete', seller_path(seller), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            <%= link_to 'Add Product', new_seller_product_path(seller), class: 'btn btn-success' %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No sellers found.</p>
<% end %>
